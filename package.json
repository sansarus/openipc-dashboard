{
  "name": "openipc-dashboard",
  "version": "2.1.0",
  "description": "App for managing OpenIPC cameras",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Your Name"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^22.3.27"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "axios": "^1.6.8",
    "ssh2": "^1.15.0",
    "ws": "^8.17.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.vavol.openipcdashboard",
    "productName": "OpenIPC Dashboard",
    "copyright": "Copyright Â© 2024 vavol",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "files": [
      "**/*",
      "!dist/",
      "!*.code-workspace"
    ],
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/ffmpeg/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "Rinibr",
      "repo": "openipc-dashboard"
    }
  }
}
